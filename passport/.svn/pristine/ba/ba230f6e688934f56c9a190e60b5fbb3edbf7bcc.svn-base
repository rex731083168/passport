<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easywed.stargate.dao.mapper.UserMapper">
	<resultMap type="cn.easywed.stargate.dao.persistence.User"
		id="userMap">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="create_time" property="creattime" />
	</resultMap>



	<select id="findById" parameterType="long" resultMap="userMap">
		SELECT *
		FROM user WHERE id=#{id}
	</select>

	<insert id="register" useGeneratedKeys="true" keyProperty="id"
		parameterType="cn.easywed.stargate.dao.persistence.User">
		INSERT INTO
		user(username,password,mobile,department,create_time,status)
		VALUES(
		#{username},
		#{password},
		#{mobile},
		#{department},
		#{creattime},
		#{status}
		)
	</insert>


	<select id="getUsers" parameterType="java.util.HashMap"
		resultMap="userMap">
		SELECT * FROM user WHERE 1=1
		<if test="username!=null and username!=''">
			AND username = #{username}
		</if>
		<if test="department!=null and department!=''">
			AND department = #{department}
		</if>
		<if test="isvalid!=null and isvalid!=''">
			AND isvalid = #{isvalid}
		</if>
	</select>

	<select id="getUserInfo" resultMap="userMap"
		parameterType="cn.easywed.stargate.dao.persistence.User">
		SELECT * FROM user WHERE
		mobile= #{mobile} AND password =
		#{password}
	</select>

	<update id="updateUser" parameterType="cn.easywed.stargate.dao.persistence.User">
		UPDATE user SET
		<if test="password!=null and password!=''">
			password = #{password}
		</if>
		<if test="nickname!=null and nickname!=''">
			nickname = #{nickname}
		</if>

		WHERE
		id = #{id}
	</update>


	<select id="queryUserListCountByConditions" parameterType="java.util.HashMap"
		resultType="java.lang.Integer">
		SELECT count(*) FROM user WHERE 1=1
		<if test="username!=null and username!=''">
			AND username = #{username}
		</if>
		<if test="department!=null and department!=''">
			AND department = #{department}
		</if>
		<if test="isvalid!=null and isvalid!=''">
			AND isvalid = #{isvalid}
		</if>
	</select>


	<select id="queryUserListByConditions" parameterType="java.util.HashMap"
		resultMap="userMap">
		SELECT * FROM user WHERE 1=1
		<if test="username!=null and username!=''">
			AND username = #{username}
		</if>
		<if test="department!=null and department!=''">
			AND department = #{department}
		</if>
		<if test="isvalid!=null and isvalid!=''">
			AND isvalid = #{isvalid}
		</if>
		<if test="parentId!=null and parentId!=''">
			AND parentId = #{parentId}
		</if>
		ORDER BY id ASC
		LIMIT #{begain}, #{pageSize}

	</select>

</mapper>
