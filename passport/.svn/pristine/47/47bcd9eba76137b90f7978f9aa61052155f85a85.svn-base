<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easywed.stargate.dao.mapper.UserMapper">
	<resultMap type="cn.easywed.stargate.dao.persistence.User" id="userMap">
		<id column="id" property="id" />
		<result column="name" property="name" /> 
		<result column="create_time" property="creattime" /> 
	</resultMap>
	
		
	
	<select id="findById" parameterType="long" resultMap="userMap">
		SELECT * FROM user WHERE id=#{id}
	</select>
	
	<insert id="register" useGeneratedKeys="true" keyProperty="id"
		parameterType="cn.easywed.stargate.dao.persistence.User">
		INSERT INTO user(username,password,mobile,department,create_time,status) 
		VALUES(
		#{username},
		#{password},
		#{mobile},
		#{department},
		#{creattime},
		#{status}
		)
	</insert>
	
	<select id="getUsers" resultMap="userMap">
		SELECT * FROM user 
	</select>
	
	<select id="getUserInfo" resultMap="userMap" parameterType="cn.easywed.stargate.dao.persistence.User">
		SELECT * FROM user WHERE 
		mobile= #{mobile} AND password = #{password}
	</select>
	
</mapper>
