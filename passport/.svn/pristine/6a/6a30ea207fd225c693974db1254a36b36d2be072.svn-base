package cn.easywed.stargate.service;

import java.util.List;
import java.util.Map;

import cn.easywed.stargate.dao.persistence.Auth;

public interface IAuthService {

	// 添加权限
	int addAuth(Auth auth);

	// 更新权限
	int updateAuth(Auth auth);

	// 查询权限
	Auth getById(long authId);

	// 批量查询权限
	List<Auth> getAuths(Map condition);

	// 根据parentId查询权限列表
	List<Auth> getByParentId(long parentId);
	
	// 查询系统下权限
	Auth getByIdSid(long authId,long sid);

}
