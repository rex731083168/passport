<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easywed.stargate.dao.mapper.RoleMapper">
	<resultMap type="cn.easywed.stargate.dao.persistence.Role" id="roleMap">
		<id column="role_id" property="roleId" />
		<id column="role_name" property="roleName" />
		<id column="description" property="description" />
		<id column="create_time" property="createTime" />
	</resultMap>
	

	
	<insert id="addRole" useGeneratedKeys="true" keyProperty="role_id"
		parameterType="cn.easywed.stargate.dao.persistence.Role">
		INSERT INTO role(role_name,description,create_time) 
		VALUES(
		#{roleName},
		#{description},
		#{createTime}
		)
	</insert>
	
	<select id="getById" resultMap="roleMap" parameterType="long">
		SELECT * FROM role WHERE 
		role_id = #{roleId}
	</select>
	
	<select id="getRoles" resultMap="roleMap" >
		SELECT * FROM role 
	</select>
	
	
	
</mapper>
